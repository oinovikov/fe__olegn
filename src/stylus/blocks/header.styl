// header

.header
  position: relative
  flex: 0 0 auto
  display: block
  padding: 0
  margin: 0

  &__body
  &__title
  &__label
    position: relative
    display: block
    padding: 0
    margin: 0

  &__body
    padding-top: 6em
    padding-bottom: 1em
    transition: all .64s ease-out 0s

    .{$pageRootClassName}_state_loading &
      opacity: 0
      transition: none

    .{$pageRootClassName}_state_loaded &
      opacity: 1

  &__title
    font-weight: 500
    font-size: 1em
    line-height: 1.5
    color: #bdbdbd
    letter-spacing: .02em

  &__label
    position: relative
    vertical-align: top
